<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/platform_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <TextView
                android:id="@+id/login_platform_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/platform_title"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinner_items"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#d11f08"
                android:entries="@array/market_items"
                android:prompt="@string/spinner_market"
                android:padding="5dp"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_gravity="center_horizontal"
                android:text="@string/menu_payment" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>